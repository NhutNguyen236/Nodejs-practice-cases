<!DOCTYPE html>
<html>
<head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
var index = 0
$(document).ready(function(){
  $("#btn1").click(function(){
    // If you are already on $() level, use '+_attr()_+'
    // If you are already on `` level from a $(), use '+_attr()_+'
    $('#newPost').append(
        $('<div id="'+index+'"></div>').load('adder.html', function(){
            $('#'+index+'').find('p').text('Changed to Bye bye')
        })
    )
    // With posting posts using AJAX, we are going to do the same thing but with prepend
    index++
  });
  $("#btn2").click(function(){
    $("ol").prepend("<li>Prepended item</li>");
  });
});
</script>
</head>
<body>

<div id="newPost"></div>
<p>This is another paragraph.</p>

<ol>
  <li>List item 1</li>
  <li>List item 2</li>
  <li>List item 3</li>
</ol>

<button id="btn1">Prepend text</button>
<button id="btn2">Prepend list item</button>

</body>
</html>
